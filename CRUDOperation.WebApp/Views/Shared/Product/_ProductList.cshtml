    <table class="table table-striped table-responsive table-hover table-condensed table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Expiry Date</th>
                <th>IsActive</th>
                <th>CategoryID</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.ExpireDate</td>
                    <td>@product.IsActive</td>
                    <td width="3px">@product.CategoryId</td>
                    

                    <td>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-success"><span><strong><i class="fa fa-edit"> Edit</i></strong></span></a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger"><span><i class="fa fa-trash-o"><strong> Delete</strong></i></span></a>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary"><span><i class="fa fa-align-justify"><strong> Details</strong></i></span></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
